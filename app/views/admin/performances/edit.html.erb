<% title "Edit Admin/Performance" %>

<div id="performance_form">
  <%= form_for [:admin, @performance] do |f| %>
    <%= f.error_messages %>
    <%= f.text_field :title, :class => "span12", :placeholder => "Title of the Performance" %>
    <%= f.text_area :text, :class => "span12", :rows => "10", :placeholder => "Description of the Performance" %>
  <% end %>

  <div class="pics">
    <h2>Pics</h2>
    <script type="text/template" id="template_image">
      <div class="item {{state}}">
        <div class="image" style="background-image: url( '{{url}}' )"></div>
        <div class="controls">
          <a href="#delete" class="delete"><img src="/assets/delete.png" /></a>
        </div>
      </div>
    </script>

    <script type="text/template" id="template_image_uploading">
      <div class="item {{state}}">
        <div class="image" style="background-image: url( '{{file_url}}' )"></div>
        <div class="progress"><div class="progress-bar" style="width:{{progress}}%"></div></div>
        <div class="state">{{state}}</div>
      </div>
    </script>

    <div class="list">
    </div>
    <div class="drop-wrapper">
      <div class="drop"></div>
      <div class="drop-message">Drop image files here</div>
    </div>

    <script>
      $(function(){
        new BBAssetsUpload({
          url: "<%= admin_performance_pics_path(@performance) %>",
          listElement: $("#performance_form .pics .list"),
          dropElement: $("#performance_form .pics .drop"),
          assetTemplate: $("#template_image").html(),
          assetUploadingTemplate: $("#template_image_uploading").html(),
          maxFileSize: 500,
          acceptFileTypes: "jpg, jpeg, png",
          onSuccess: function( asset ) { console.log( "asset", asset ) },
        });
      });
    </script>
  </div><!-- pics -->

  <div class="clear"></div>


  <div class="video_main">
    <h2>Main Video</h2>
    <div class="video_form main row">
      <div class="video_player span7">
        <iframe src="http://blip.tv/play/hMxqgvvlBgA.html?p=1" width="640" height="360" frameborder="0" allowfullscreen></iframe>
        <embed type="application/x-shockwave-flash" src="http://a.blip.tv/api.swf#hMxqgvvlBgA" style="display:none"></embed>
      </div>
      <div class="video_script span5">
        <textarea rows="4" class="span5" placeholder="The video script"></textarea>
        <input type="button" class="btn btn-primary pull-right" value="Save" />
      </div>
    </div>
  </div><!-- video_main -->

  <div class="clear"></div>

  <div class="video_extras">
    <h2>Extra Videos</h2>
    <p>
      <a href="#new_extra_video" class="btn btn-primary" data-toggle="modal">New Extra Video</a>

      <!-- Modal -->
      <div id="new_extra_video" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h3 id="myModalLabel">Create new Extra Video</h3>
        </div>
        <form class="form">
          <div class="modal-body">
            <input type="text" placeholder="The Video title" class="span5" />

            <input id="lefile" type="file" style="display:none">
            <div class="input-append">
               <input id="photoCover" class="input span4" type="text">
               <a class="btn" onclick="$('input[id=lefile]').click();">Browse</a>
            </div>
            <script type="text/javascript">
              $('input[id=lefile]').change(function() {
                 $('#photoCover').val($(this).val());
              });
            </script>

            <textarea placeholder="The Video script" class="span5" rows="4"></textarea>
            <textarea placeholder="The Video description" class="span5" rows="5"></textarea>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-primary">Save changes</button>
          </div>

        </form>
      </div>
    </p>

    <div class="row-fluid">
      <ul class="thumbnails">
