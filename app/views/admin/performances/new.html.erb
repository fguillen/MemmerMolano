<% title "New Performance" %>

<%= form_for [:admin, @performance] do |f| %>
  <%= hidden_field_tag "performance[form_section]", "new" %>
  <%= render "/admin/shared/form_errors", :object => f.object %>
  <p>
    <%= f.text_field :title, :class => "span12", :placeholder => "Title of the Performance" %>
  </p>
  <p class="pull-right">
    <%= f.submit "Create Performance", :class => "btn btn-primary" %>
  </p>
<% end %>

<p><%= link_to "Back to List", admin_performances_path %></p>
