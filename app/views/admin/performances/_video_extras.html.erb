<div class="video_extras">
  <h2>Extra Videos</h2>
  <p>
    <a href="#new_extra_video" class="btn btn-primary" data-toggle="modal">New Extra Video</a>
    <%= render :partial => "/admin/videos/new", :locals => { :performance => performance } %>
  </p>

  <div class="list">
  </div>
</div>

<script type="text/template" id="video_template">
  <div class="thumbnail">
    <img src="{{pic_url}}" />
    <div class="caption">
      <h3>{{title}}</h3>
      <p>{{text}}</p>
      <p>
        <a href="#delete" class="delete btn btn-danger">Remove</a>
      </p>
    </div>
  </div>
</script>

<script>
  $(function(){
    new VideoExtrasApp({
      url: "<%= admin_performance_videos_path(performance) %>",
      listElement: $(".video_extras .list"),
      newVideoElement: $("#new_extra_video"),
      videoTemplate: $("#video_template").html()
    });
  });
</script>